<!DOCTYPE html>
<html>
  <head>
    <title>Open Source Billing</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <!-- MAIN CONTAINER START-->
    <div class="mainContainer">
      <!-- HEADER START -->
      <div class="header">
        <div class="logo">
          <%= image_tag "logo.png", :size => "185x30" %>
        </div>
        <div class="header_menu">
          <ul>
            <li><a href="#">My Account</a></li>
            <li><a href="#">Settings</a></li>
            <li><a href="#">Logout</a></li>
          </ul>
        </div>
      </div>
      <!-- HEADER END -->
      <!-- NAVIGATION START -->
      <div class="naviagion">
        <div id="nav">
          <ul class="select">
            <li><a href="#">Home</a></li>
            <li class="active"><a href="#">Clients</a>
              <ul class="sub">
                <li><a href="#">Staff and Contractors </a></li>
                <li><a class="active" href="#">Assign Clients</a></li>
                <li><a href="#">Sent Emails</a></li>
              </ul>
            </li>
            <li><a href="#">Invoices</a></li>
            <li><a href="#">Payments</a></li>
            <li><a href="#">Help</a></li>
          </ul>
        </div>
      </div>
      <!-- NAVIGATION END -->
      <!-- CONTENT AREA START-->
      <div class="content">
        <p class="notice"><%= notice %></p>
        <%= yield %>
      </div>
      <!-- CONTENT AREA END-->

    </div>
    <!-- MAIN CONTAINER END -->
  </body>
</html>
