<h1>Listing payments</h1>

<table>
  <tr>
    <th>Invoice</th>
    <th>Payment amount</th>
    <th>Payment method</th>
    <th>Payment date</th>
    <th>Notes</th>
    <th>Send payment notification</th>
    <th>Paid full</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @payments.each do |payment| %>
  <tr>
    <td><%= payment.invoice_id %></td>
    <td><%= payment.payment_amount %></td>
    <td><%= payment.payment_method %></td>
    <td><%= payment.payment_date %></td>
    <td><%= payment.notes %></td>
    <td><%= payment.send_payment_notification %></td>
    <td><%= payment.paid_full %></td>
    <td><%= link_to 'Show', payment %></td>
    <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
    <td><%= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

