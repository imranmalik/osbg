<div class="grid_control_right">
  <ul>
    <li class="grid_control_sep sep_right">
      <%= link_to "Active", "payments/filter_payments?status=active&per=#{params[:per]}", :remote => true, :class => "get_actives active" %>
      <span class="item_counts" id="actives">(<%= Payment.unarchived.size %>)</span>
    </li>
    <li class="grid_control_sep sep_right">
      <%= link_to "Archived", "payments/filter_payments?status=archived&per=#{params[:per]}", :remote => true, :class => "get_archived" %>
      <span class="item_counts" id="archives">(<%= Payment.archived.size %>)</span>
    </li>
    <li>
      <%= link_to "Deleted", "payments/filter_payments?status=deleted&per=#{params[:per]}", :remote => true, :class => "get_deleted" %>
      <span class="item_counts" id="deletes">(<%= Payment.only_deleted.size %>)</span>
    </li>
  </ul>
</div>

