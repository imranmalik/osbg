<%= nested_form_for @client, :html => { :id => 'newClient' } do |f| %>
  <% @parent_f = f %>
  <div class="content_box">
    <div class="content_inner">
      <div class="inner_heading">
        <h1 class="secondary">
          Organization
        </h1>
      </div>
      <div class="inner_form">
        <table cellspacing="0" cellpadding="0">
          <tbody><tr>
              <td class="form_title"><label class="form_title" for="client_organization_name">Organization Name</label></td>
              <td colspan="4" class="form_field">
                <%= f.text_field :organization_name, :class => 'text_field' %>
              </td>
            </tr>
            <tr>
              <td class="form_title"><label class="form_title" for="client_email">Email</label> <span>*</span></td>
              <td colspan="2" class="form_field">
                <%= f.text_field :email, :class => 'medium' %>
              </td>
              <td class="form_title title_small"><label class="form_title" for="client_home_phone">Home Phone</label></td>
              <td class="form_field">
                <%= f.text_field :home_phone, :class => 'small' %>
              </td>
            </tr>
            <tr>
              <td class="form_title"><label class="form_title" for="client_first_name">Contact Name<label></td>
              <td class="form_field">
                <%= f.text_field :first_name, :class => 'small' %>
                <div class="field_des">First Name</div>
              </td>
              <td align="right" class="form_field">
                <%= f.text_field :last_name, :class => 'small' %>
                <div class="field_des">Last Name</div>
              </td>
              <td class="form_title title_small"><label class="form_title" for="client_mobile_number">Mobile</label></td>
              <td class="form_field">
                <%= f.text_field :mobile_number, :class => 'small' %>
              </td>
            </tr>
          </tbody></table>
      </div><!--inner_form-->
    </div><!--content_inner-->
  </div><!--content_box-->
  <div class="content_box">
    <div class="content_inner">
      <div id="contact" class="inner_heading">
        <h1 class="secondary">
          Additional Contacts
        </h1>
      </div>
      <div id="adCntcts" class="inner_form" style="display: none;">
        <table cellspacing="0" cellpadding="0">
          <%= f.fields_for :client_contacts, :wrapper => false,:wrapper_tag => 'tr'%>
          <table class="client_contacts_table">
          <tr>
            <td class="form_title">&nbsp;</td>
            <td colspan="2" class="form_field" id="add_new_contact">
              <%= f.link_to_add "Add new contact", :client_contacts,:class=>'add' %>
            </td>
          </tr>
          </table>
        </table>
      </div><!--inner_form-->
    </div><!--content_inner-->
  </div><!--content_box-->


  <div class="content_box no_border">
    <div class="content_inner">
      <div class="inner_heading">
        <h1 id="detail" class="secondary">
          Details
        </h1>
      </div>
      <div id="add_Detail" class="inner_form">
        <table cellspacing="0" cellpadding="0">
          <tbody><tr>
              <td class="form_title">Country</td>
              <td colspan="3" class="form_field">
                <%= f.select :country, COUNTRY_LIST ,{:prompt => ""},{"data-placeholder" => "Select a country...",:class => "medium chzn-select"}%>
              </td>
            </tr>
            <tr>
              <td class="form_title"><label class="form_title" for="client_address_street1">Address</label></td>
              <td colspan="3" class="form_field">
                <%= f.text_field :address_street1, :class => 'text_field' %>
                <div class="field_des">Street#1</div>
              </td>
            </tr>
            <tr>
              <td class="form_title">&nbsp;</td>
              <td colspan="3" class="form_field">
                <%= f.text_field :address_street2, :class => 'text_field' %>
                <div class="field_des">Street#2</div>
              </td>
            </tr>
            <tr>
              <td class="form_title">&nbsp;</td>
              <td class="form_field">
                <%= f.text_field :city, :class => 'small' %>
                <div class="field_des">City</div>
              </td>
              <td class="form_field">
                <%= f.text_field :province_state, :class => 'small' %>
                <div class="field_des">Provice / State</div>
              </td>
              <td class="form_field">
                <%= f.text_field :postal_zip_code, :class => 'small' %>
                <div class="field_des">Postal / Zip Code</div>
              </td>
            </tr>
  <%#*<tr>%>
  <%#*<td class="form_title">&nbsp;</td>%>
  <%#*<td colspan="2" class="form_field">%>
  <%#*<a class="show" href="#">Show secondary address</a>%>
  <%#*</td>%>
  <%#*</tr>%>
            <tr>
              <td class="form_title">Industry</td>
              <td colspan="3" class="form_field">
                <%= f.select :industry, INDUSTRY_LIST ,{:prompt => ""},{"data-placeholder" => "Select an industry...",:class => "medium chzn-select"}%>
              </td>
            </tr>
            <tr>
              <td class="form_title">Company Size</td>
              <td colspan="3" class="form_field">
                <%= f.select :company_size, COMPANY_SIZE ,{:prompt => ""},{"data-placeholder" => "Select company size...",:class => "medium chzn-select"}%>
              </td>
            </tr>
            <tr>
              <td class="form_title"><label class="form_title" for="client_business_phone">Business Phone</label></td>
              <td class="form_field">
                <%= f.text_field :business_phone, :class => 'small' %>
              </td>
            </tr>
            <tr>
              <td class="form_title"><label class="form_title" for="client_fax">Fax</label></td>
              <td class="form_field">
                <%= f.text_field :fax, :class => 'small' %>
              </td>
            </tr>
            <tr>
              <td class="form_title"><label class="form_title" for="client_internal_notes">Internal Notes</label></td>
              <td colspan="3" class="form_field">
                <%= f.text_area :internal_notes%>
              </td>
            </tr>
          </tbody></table>
      </div><!--inner_form-->
    </div><!--content_inner-->
  </div><!--content_box-->
  <div class="form_btn">
    <%= f.submit "SAVE" %>
  </div>
<% end %>
