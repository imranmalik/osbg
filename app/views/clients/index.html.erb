<%- model_class = Client -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table_listing">
  <thead>
      <th>Organization</th>
      <th>Contact</th>
      <th>Email</th>
      <th>Phone</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
  </thead>
  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= link_to client.organization_name, client_path(client) %></td>
        <td><%= client.contact_name %></td>
        <td><%= client.email %></td>
        <td><%= client.business_phone %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_client_path(client), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      client_path(client),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New Client",new_client_path, :class => 'btn btn-primary' %>
