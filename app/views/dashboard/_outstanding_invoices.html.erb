<div class="overview_box_heading">
  <h1>Outstanding Invoices <span>(USD)</span></h1>
</div>
<div class="graff_description">
  <div class="graff_value">
    <div class="graff_digit">
      <ul>
        <li class="digit_content"><%= number_to_currency(@outstanding_invoices) %></li>
        <li class="digit_description">Total Outstanding <span>(USD)</span></li>
      </ul>
    </div>
  </div>
  <!--graff_value-->
  <div class="graff_detail">
    <table cellspacing="0" cellpadding="0">
      <tbody>
      <tr>
        <td>0 - 30 days old</td>
        <td>: <span><%= number_to_currency(invoices_by_period '0-30')%></span></td>
      </tr>
      <tr>
        <td>30 - 60 days old</td>
        <td>: <%= number_to_currency(invoices_by_period '30-60')%></td>
      </tr>
      <tr>
        <td>60 - 90 days old</td>
        <td>: <%= number_to_currency(invoices_by_period '60-90')%></td>
      </tr>
      <tr>
        <td>Over 90 days old</td>
        <td>: <%= number_to_currency(invoices_by_period 'over-90')%></td>
      </tr>
      </tbody>
    </table>
    <a href="/reports/aged_accounts_receivable">Account Aging Report</a>
  </div>
  <!--graff_detail-->
</div>
<!--graff_description-->