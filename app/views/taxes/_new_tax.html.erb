<%= form_tag "/taxes/create", :id => "create_tax", :remote => true do %>
    <div id="taxModal" class="modal hide fad" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="model_grey_container">
        <div class="modal-header">
          <h1>Add New Tax</h1> <br/><br/>
          <table cellspacing="0" cellpadding="0">
            <tbody>
            <tr>
              <td colspan="4" class="form_field">
                <%= text_field_tag "tax[name]", '', :class => 'text_field', :placeholder => "Tax name" %>
              </td>
            </tr>
            <tr>
              <td colspan="2" class="form_field">
                <%= text_field_tag "tax[percentage]", '', :class => 'text_field', :placeholder => "Percentage" %>
                <%= hidden_field_tag :quick_create %>
              </td>
              </tr>
            </tbody>
          </table>
          <div class="cross_btn">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
              <%= image_tag "cross.png", :size => "7x7", :alt => "" %>
            </button>
          </div>
        </div>
        <div class="modal-body">
        </div>
        <div class="footer ">
          <%= submit_tag "Add Tax", :class => "btn_large" %>
          <a class="btn_large dark_grey" href="#" data-dismiss="modal">cancel</a>
        </div>
      </div>
    </div>
<% end %>