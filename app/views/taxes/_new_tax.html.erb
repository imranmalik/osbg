<div id="create_tax" class="tiny_create_form">
<%#= form_tag "/taxes/create", :id => "create_tax", :remote => true do %>
  <%= link_to 'x', 'javascript:', :class => "close_btn" %>
  <h4>Add New Tax</h4> <br/>
  <table cellspacing="0" cellpadding="0">
    <tbody>
    <tr>
      <td colspan="4" class="form_field">
        <%= text_field_tag "tax[name]", '', :class => 'text_field', :placeholder => "Tax name *", :required => 'required', "data-unique" => "" %>
      </td>
    </tr>
    <tr>
      <td colspan="2" class="form_field">
        <%= text_field_tag "tax[percentage]", '', :class => 'text_field', :placeholder => "Percentage *", :required => 'required' %>
        <%= hidden_field_tag :quick_create %>
      </td>
    </tr>
    </tbody>
  </table>
  <div class="cross_btn">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
      <%= image_tag "cross.png", :size => "7x7", :alt => "" %>
    </button>
  </div>
  <div class="footer ">
    <%#= submit_tag "save", :name => "save", :class => "btn_large", :style => "width:40px;" %>
    <%#= submit_tag "save & ADD MORE", :name => "add_more", :class => "btn_large" %>
    <%= button_tag "save",:name => "save", :class => "btn_large btn_save", :style => "width:40px;" %>
    <%= button_tag "save & ADD MORE",:name => "add_more", :class => "btn_large btn_save_and_add_more" %>
  </div>
</div>
<%# end %>
