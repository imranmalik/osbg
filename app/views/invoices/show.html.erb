<%- model_class = Invoice -%>
<div class="invoice-page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %>:<%= @invoice.invoice_number %></h1>
</div>
<div class="page-contents">
  <div class="invheader">
    <div class="invheader-upper">
      <div class="invheader-address-account">
       <%= @invoice.client.organization %> <br><%= @invoice.client.sec_adrs_street_address_1 %><br><%= @invoice.client.sec_adrs_city %>
      </div>
      <div class="invheader-logo-container">
        <div class="invheader-logo">
        </div>
      </div>
    </div>

    <div class="invheader-lower">
      <div class="invheader-address-client">
        Hyperconversion<br>Imran Malik<br>54-M Gulberge III<br>Lahore&nbsp;&nbsp;454500
      </div>
      <div class="invheader-invoicedetails">
        <table cellspacing="0">
          <tbody>
            <tr>
              <th>																			Invoice #
              </th>
              <td><%= @invoice.invoice_number %></td>
            </tr>
            <tr>
              <th>																				Invoice Date
              </th>
              <td><%= @invoice.invoice_date %></td>
            </tr>
            <tr class="invheader-invoicedetails-balance">
              <th>
                <div>Amount Due </div></th>
              <td>
                <div>Rs.0.00  PKR</div>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <div class="invbody">
    <table cellspacing="0" class="invbody-items">
      <thead>
        <tr>
          <th class="first"><div class="item">Item </div></th>
          <th><div class="description">Description</div></th>
          <th><div class="unitcost">Unit Cost</div></th>
          <th><div class="quantity">Quantity</div></th>
          <th class="last"><div class="linetotal">Line Total</div></th>
        </tr>
      </thead>
      <tbody>
        <% @invoice.invoice_line_items.each do |item|
        item_line_total= (item.item_unit_cost ||0) * (item.item_quantity ||0)
        %>
        <tr>
          <td style="width: 120px;"><div class="item"><%= item.item_name %></div></td>
          <td><div class="description"><%= item.item_description %> </div></td>
          <td style="width: 85px;"><div class="unitcost"><%= item.item_unit_cost %></div></td>
          <td style="width: 80px;"><div class="quantity"><%= item.item_quantity %></div></td>
          <td style="width: 90px;"><div class="linetotal"><%= item_line_total %></div></td>
        </tr>
        <% end %>
      </tbody>
    </table>

    <table cellspacing="0" class="invbody-summary">
      <tbody>
        <tr class="invbody-summary-subtotal">
          <td class="invbody-summary-clean">&nbsp;</td>
          <th style="width: 150px;"><strong>Subtotal</strong></th>
          <td style="width: 120px;"><strong>58,500.00</strong></td>
        </tr>
        <tr>
          <td class="invbody-summary-clean">&nbsp;</td>
          <th style="width: 150px;">Discount - 5%</th>
          <td style="width: 120px;">-2,925.00</td>
        </tr>
        <tr>
          <td class="invbody-summary-clean">&nbsp;</td>
          <th style="width: 150px;">VAT (RT710)2%</th>
          <td style="width: 120px;">427.50</td>
        </tr>
        <tr>
          <td class="invbody-summary-clean">&nbsp;</td>
          <th class="border" style="width: 150px;"><strong>Total</strong></th>
          <td class="border" style="width: 120px;"><strong>56,002.50</strong></td>
        </tr>
        <tr class="invbody-summary-paid">
          <td class="invbody-summary-clean">&nbsp;</td>
          <th style="width: 150px;">Amount Paid</th>
          <td style="width: 120px;">-56,002.50</td>
        </tr>
        <tr class="invbody-summary-total">
          <td class="invbody-summary-clean">&nbsp;</td>
          <th style="width: 150px;"><div><strong>Amount Due</strong></div></th>
          <td style="width: 120px;"><div><strong>Rs.0.00  PKR</strong></div></td>
        </tr>
      </tbody>
    </table>
    <div style="height: 1px; overflow: hidden;" class="clearb"></div>

    <div class="invbody-terms">
      <h2>Terms</h2>
      <%= @invoice.tems %>
    </div>
    <div class="invbody-notes">
      <div>
        <h2>Notes</h2>
	<%= @invoice.notes %>
      </div>
    </div>
  </div>
  <dt><strong><%= model_class.human_attribute_name(:invoice_number) %>:</strong></dt>
  <dd><%= @invoice.invoice_number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:invoice_date) %>:</strong></dt>
  <dd><%= @invoice.invoice_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:po_number) %>:</strong></dt>
  <dd><%= @invoice.po_number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:discount_percentage) %>:</strong></dt>
  <dd><%= @invoice.discount_percentage %></dd>
  <dt><strong><%= model_class.human_attribute_name(:client_id) %>:</strong></dt>
  <dd><%= @invoice.client_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tems) %>:</strong></dt>
  <dd><%= @invoice.tems %></dd>
  <dt><strong><%= model_class.human_attribute_name(:notes) %>:</strong></dt>
  <dd><%= @invoice.notes %></dd>
  <dt><strong><%= model_class.human_attribute_name(:status) %>:</strong></dt>
  <dd><%= @invoice.status %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sub_total) %>:</strong></dt>
  <dd><%= @invoice.sub_total %></dd>
  <dt><strong><%= model_class.human_attribute_name(:discount_amount) %>:</strong></dt>
  <dd><%= @invoice.discount_amount %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tax_amount) %>:</strong></dt>
  <dd><%= @invoice.tax_amount %></dd>
</div>
