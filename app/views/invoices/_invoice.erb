<%
   no_record_message = "You haven't created any invoice yet. Please click on New Invoice button to create new invoice."
   if params[:status] == "archived" || @action == "recovered from archived"
     no_record_message = "You haven't any archived invoice yet."
   elsif params[:status] == "deleted" || @action == "recovered from deleted"
     no_record_message = "You haven't any deleted invoice yet."
   end
%>
<% if  @invoices.length > 0 %>
    <% @invoices.each do |invoice| %>
        <tr>
          <td class="align_center"> <%= check_box_tag "invoice_ids[]", invoice.id, false, :id => "invoice_#{invoice.id}" %></td>
          <td class="align_center"><%= link_to invoice.invoice_number, invoice_path(invoice), :class => "invoices_link" %></td>
          <td class="align_left"><%= invoice.client.organization_name rescue "" %></td>
          <td class="align_left"><%= invoice.notes %></td>
          <td class="align_right"><%= "#{number_to_currency(invoice.invoice_total)}" %></td>
          <td class="align_center"><%= invoice.invoice_date.to_time.strftime("%m/%d/%Y") rescue "" %></td>
          <td class="align_center"><%= invoice.due_date.to_time.strftime("%m/%d/%Y") rescue "" %></td>
          <td class="align_center <%= invoice.status %>" title="<%= invoice.tooltip %>"><span><%= invoice.status %></span></td>
          <td class="align_center">
            <%= link_to t('.edit', :default => t("helpers.links.edit")),
                        edit_invoice_path(invoice) %>
            <%= link_to "Pay", "payments/enter_payment?invoice_id=#{invoice.id}&pay_invoice=true", :remote => true, "data-toggle" => "modal", "data-target" => "#paymentModal" %>
            <%# unless params[:status] == "deleted" %>
            <%#= link_to t('.destroy', :default => "Delete"),
                            invoice_path(invoice),
                            :method => :delete,
                            :data => {:confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?'))},
                            :class => 'del_action' %>
            <%# end %>
          </td>
        </tr>
    <% end %>

<% else %>
    <tr>
      <td colspan="8">
        <div class="no_record_container"><%= no_record_message %></div>
      </td>
    </tr>
<% end %>
