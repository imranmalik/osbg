<%
 no_record_message = "You haven't created any invoice yet. Please click on New Invoice button to create new invoice."
if params[:status] == "archived"
  no_record_message = "You haven't any archived invoice yet."
elsif params[:status] == "deleted"
  no_record_message = "You haven't any deleted invoice yet."
end
%>
end
<% if  @invoices.length > 0 %>
  <% @invoices.each do |invoice| %>
    <tr>
      <td> <%= check_box_tag "invoice_ids[]", invoice.id, false, :id => "invoice_#{invoice.id}" %></td>
      <td><%= link_to invoice.invoice_number, invoice_path(invoice) %></td>
      <td><%= invoice.client.organization_name %></td>
      <td><%= invoice.description %></td>
      <td><%= invoice.invoice_total %></td>
      <td><%= invoice.invoice_date.to_time.strftime("%m/%d/%Y")%></td>
      <td><%= invoice.status %></td>
      <td>
        <%= link_to t('.edit', :default => t("helpers.links.edit")),
          edit_invoice_path(invoice), :class => 'edit_action' %>
        <%= link_to t('.destroy', :default => "Delete"),
          invoice_path(invoice),
          :method => :delete,
          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
          :class => 'del_action' %>
      </td>
    </tr>
  <% end %>
  <tr>
    <td colspan="8">
      <div class="paginator">
        <%= paginate @invoices, :remote => true %>
        <div class="paging_info">
          <%= page_entries_info @invoices %>
        </div>
      </div>
    </td>
  </tr>
<% else %>
  <tr>
    <td colspan="8">
      <div class="no_record_container"><%= no_record_message %></div>
    </td>
  </tr>
<% end %>
<tr>
  <td colspan="8" style="border-top: 0;">
    <div class="active_links">
      <%= link_to "Active", "invoices/filter_invoices?status=active", :remote => true %>
      <span>|</span>
      <%= link_to "Archived", "invoices/filter_invoices?status=archived", :remote => true %>
      <span>|</span>
      <%= link_to "Deleted", "invoices/filter_invoices?status=deleted", :remote => true %>
    </div>
  </td>
</tr>
<tr>
  <td align="center" colspan="8">
    <%= link_to t('.new', :default => t("helpers.links.new")),
      new_invoice_path,
      :class => 'new_btn' %>
  </td>
</tr>