<%
   no_record_message = "You haven't created any invoice yet. Please click on New Invoice button to create new invoice."
   if params[:status] == "archived"
     no_record_message = "You haven't any archived invoice yet."
   elsif params[:status] == "deleted"
     no_record_message = "You haven't any deleted invoice yet."
   end
%>
<% if  @invoices.length > 0 %>
    <% @invoices.each do |invoice| %>
        <tr>
          <td class="align_center"> <%= check_box_tag "invoice_ids[]", invoice.id, false, :id => "invoice_#{invoice.id}" %></td>
          <td class="align_center"><%= link_to invoice.invoice_number, invoice_path(invoice), :class => "invoices_link" %></td>
          <td class="align_left"><%= invoice.client.organization_name rescue "" %></td>
          <td class="align_left"><%= invoice.description %></td>
          <td class="align_right"><%= "#{current_user.currency_symbol} #{number_with_precision(invoice.invoice_total, :precision => 2)}" %></td>
          <td class="align_center"><%= invoice.invoice_date.to_time.strftime("%m/%d/%Y") %></td>
          <td class="align_center <%= invoice.status %>"><span class="invoice-tooltip" title="<%= invoice.description %>"><%= invoice.status %></span></td>
          <td class="align_center">
            <%= link_to t('.edit', :default => t("helpers.links.edit")),
                        edit_invoice_path(invoice), :class => 'edit_action' %>
            <% unless params[:status] == "deleted" %>
                <%#= link_to t('.destroy', :default => "Delete"),
                            invoice_path(invoice),
                            :method => :delete,
                            :data => {:confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?'))},
                            :class => 'del_action' %>
            <% end %>
          </td>
        </tr>
    <% end %>
    <tr>
      <td colspan="8" style="border-top: 1px solid #DDDDDD; text-align: left; ">
        <div class="paginator">
          <%= paginate @invoices, :remote => true %>
          <div class="paging_info">
            <%= page_entries_info @invoices %>
          </div>
        </div>
      </td>
    </tr>

<% else %>
    <tr>
      <td colspan="8">
        <div class="no_record_container"><%= no_record_message %></div>
      </td>
    </tr>
<% end %>
