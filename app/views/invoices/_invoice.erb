<% @invoices.each do |invoice| %>
    <tr>
      <td><%= link_to invoice.invoice_number, invoice_path(invoice) %></td>
      <td><%= invoice.client.organization_name %></td>
      <td><%= invoice.description %></td>
      <td><%= invoice.total %></td>
      <td><%= invoice.invoice_date.to_time.strftime("%m/%d/%Y") %></td>
      <td><%= invoice.status %></td>
      <td>
        <%= link_to t('.edit', :default => t("helpers.links.edit")),
                    edit_invoice_path(invoice), :class => 'btn btn-mini' %>
        <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                    invoice_path(invoice),
                    :method => :delete,
                    :data => {:confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?'))},
                    :class => 'btn btn-mini btn-danger' %>
      </td>
    </tr>
<% end %>
<tr>
  <td colspan="7">
    <div class="paginator">
      <%= paginate @invoices, :remote => true %>
      <div class="invoice_info">
        <%= page_entries_info @invoices %>
      </div>
    </div>
  </td>
</tr>