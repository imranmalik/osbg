<% @invoices.each do |invoice| %>
    <tr>
      <td><%= check_box_tag "check_#{invoice.id}" %></td>
      <td><%= link_to invoice.invoice_number, invoice_path(invoice) %></td>
      <td><%= invoice.client.organization_name %></td>
      <td><%= invoice.description %></td>
      <td><%= invoice.invoice_total %></td>
      <td><%= invoice.invoice_date.to_time.strftime("%m/%d/%Y")%></td>
      <td><%= invoice.status %></td>
      <td>
        <%= link_to t('.edit', :default => t("helpers.links.edit")),
                    edit_invoice_path(invoice), :class => 'edit_action' %>
        <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                    invoice_path(invoice),
                    :method => :delete,
                    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                    :class => 'del_action' %>
      </td>
    </tr>
<% end %>
<tr>
  <td colspan="8">
    <div class="paginator">
      <%= paginate @invoices, :remote => true %>
      <div class="paging_info">
        <%= page_entries_info @invoices %>
      </div>
    </div>
  </td>
</tr>
<tr>
  <td align="center" colspan="8">
    <%= link_to t('.new', :default => t("helpers.links.new")),
                new_invoice_path,
                :class => 'new_btn' %>
  </td>
</tr>