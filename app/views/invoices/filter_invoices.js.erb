jQuery('tbody#invoice_body').hide(200, function(){jQuery(this).html('<%= escape_javascript render("invoice") %>').show(500);});
<% status = params[:status]%>
jQuery('.top_links').hide();
 <%if status == "active" %>
    jQuery('.archive,.destroy,.payment').show();
<% elsif status == "archived"%>
    jQuery('.recover_archived,.destroy,.payment').show();
<% elsif status == "deleted"%>
    jQuery('.recover_deleted,.payment').show();
<%end%>
