<table class="table table-striped">
  <tr>
    <th><input type="checkbox" name="check" id="main-invoice-checkbox"></th>
    <th>Invoice#</th>
    <th>Invoice Description</th>
    <th>Client</th>
    <th>Total</th>
    <th>Date</th>
    <th>Status</th>
  </tr>
  <% @invoices.each do |inv|%>
    <tr>
      <td class="col-checkbox"><%= check_box_tag "invoice_ids[]", inv.id%>
      <td class="invoice"><%= inv.invoice_number %></td>
      <td><%= inv.description %></td>
      <td><%= inv.client.organization_name %></td>
      <td class="ta_right currency no-sort"><%= inv.invoice_total %><span class="tt"> PKR</span></td>
      <td><%= "2013-01-01" %></td>
      <td class="ta_center">
        <span class="invoice-status invoice-sent">
          <%= inv.status %>
        </span>
      </td>
    </tr>
  <% end %>
</table>
