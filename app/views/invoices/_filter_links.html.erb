<div class="grid_control_right">
  <ul>
    <li class="grid_control_sep sep_right">
      <%= link_to "Active", "invoices/filter_invoices?status=active&per=#{params[:per]}", :class => "get_actives active", :remote => true %>
      <span id="actives">(<%= Invoice.unarchived.size %>)</span>
    </li>
    <li class="grid_control_sep sep_right">
      <%= link_to "Archived", "invoices/filter_invoices?status=archived&per=#{params[:per]}", :class => "get_archived", :remote => true %>
      <span id="archives">(<%= Invoice.archived.size %>)</span>
    </li>
    <li>
      <%= link_to "Deleted", "invoices/filter_invoices?status=deleted&per=#{params[:per]}", :class => "get_deleted", :remote => true %>
      <span id="deletes">(<%= Invoice.only_deleted.size %>)</span>
    </li>
  </ul>
</div>
