<%- model_class = Invoice -%>
<div class="invoice">
  <div class="content_top">
    <div class="primary_heading">
      <h1>
        <%= t '.title', :default => model_class.model_name.human.pluralize %>
        <span class="forward_slash">/</span><span>Active</span>
      </h1>
    </div>
    <div class="primary_btn">
      <%= link_to (content_tag(:span, "NEW INVOICE")),
                  new_invoice_path,
                  :class => 'btn_large' %>
    </div>
  </div>
  <!--content_top-->
  <%= form_tag "invoices/bulk_actions", :remote => true do -%>
      <div class="content_middle">
        <div class="grid_control">
          <div class="grid_control_left">
            <ul>
              <li><%= submit_tag "Recover", :name => "recover_archived", :class => "top_links recover_archived", :style => "display:none;" %></li>
              <li><%= submit_tag "Recover", :name => "recover_deleted", :class => "top_links recover_deleted", :style => "display:none;" %></li>
              <li><%= submit_tag "Archive", :name => "archive", :class => "top_links archive" %></li>
              <li class="grid_control_sep"><%= submit_tag "Delete", :name => "destroy", :class => "top_links destroy" %></li>
              <li><a href="#">Copy</a></li>
              <li><a href="#">Print</a></li>
              <li class="grid_control_sep"><a href="#">Send</a></li>
              <li><%= submit_tag "Enter payment", :name => "payment" %></li>
            </ul>
          </div>
          <div class="grid_control_right" id="active_links">
            <%= render "invoices/filter_links" %>
          </div>
        </div>
        <!--grid_control-->
        <div class="grid_table">
          <table cellpadding="0" cellspacing="0" class="table table_listing invoice_listing">
            <colgroup>
              <col class="one"/>
              <col class="two"/>
              <col class="three"/>
              <col class="four"/>
              <col class="five"/>
              <col class="six"/>
              <col class="seven"/>
              <col class="eight"/>
              <col class="nine"/>
            </colgroup>
            <thead>
            <tr>
              <th class="align_center not-sortable"><%= check_box_tag 'select_all' %></th>
              <th class="align_center">Invoices</th>
              <th class="align_left">Client</th>
              <th class="align_left">Description</th>
              <th class="align_center {sorter:'thousands'}">Total</th>
              <th class="align_center">Date</th>
              <th class="align_center">Due Date</th>
              <th class="align_center">Status</th>
              <th class="align_center not-sortable"><%= t '.actions', :default => t("helpers.actions") %></th>
            </tr>
            </thead>
            <tbody id="invoice_body">
            <%= render 'invoice' %>
            <tfoot id="paging_links">
            <%= render "paging" %>
            </tfoot>
            </tbody>
          </table>
        </div>
        <!--grid_table-->
      </div>
      <!--content_middle-->
      <div class="content_bottom">
        <%= link_to (content_tag(:span, "NEW INVOICE")),
                    new_invoice_path,
                    :class => 'btn_large' %>
      </div>
      <!--content_bottom-->
  <% end %>
</div><!--invoice-->

