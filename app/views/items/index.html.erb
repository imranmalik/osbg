<div class="items">
  <div class="content_top">
    <div class="primary_heading">
      <h1>
        Items<span class="forward_slash">/</span><span>Active</span>
      </h1>
    </div>
    <div class="primary_btn">
      <%= link_to (content_tag(:span, "NEW Item")),
        new_item_path,
        :class => 'btn_large' %>
    </div>
  </div><!--content_top-->
  <%= form_tag "invoices/bulk_actions", :remote => true do -%>

    <div class="content_middle">

      <div class="grid_control">
        <div class="grid_control_left">
          <ul>
            <li><%= submit_tag "Archive", :name => "archive"%></li>
            <li class="grid_control_sep"><%= submit_tag "Delete", :name => "destroy"%></li>
            <li><a href="#">Copy</a></li>
            <li><a href="#">Print</a></li>
          </ul>
        </div>
        <div class="grid_control_right">
          <ul>
            <li class="grid_control_sep sep_right"><a href="#" class="active">Active</a><span>(11)</span></li>
            <li class="grid_control_sep sep_right"><a href="#">Archived</a><span>(11)</span></li>
            <li><a href="#">Deleted</a><span>(0)</span></li>
          </ul>
        </div>
      </div><!--grid_control-->

      <div class="grid_table">
        <table cellpadding="0" cellspacing="0">
          <colgroup>
            <col class="one"/>
            <col class="two"/>
            <col class="three"/>
            <col class="four"/>
            <col class="five"/>
            <col class="six"/>
            <col class="seven"/>
            <col class="eight"/>
          </colgroup>
          <thead>
            <tr>
              <th class="align_center"><%= check_box_tag 'select_all' %></th>
              <th class="align_center">Item name</th>
              <th class="align_left">Item description</th>
              <th class="align_left">Unit cost ($)</th>
              <th class="align_center">Quantity</th>
              <th class="align_center">Tax 1</th>
              <th class="align_center">Tax 2</th>
              <th class="align_center"><%= t '.actions', :default => t("helpers.actions") %></th>
            </tr>
          </thead>
          <tbody id="item_body">
            <%= render 'items' %>
          <tfoot id="paging_links">
            <%= render "paging" %>
          </tfoot>
          </tbody>
        </table>

      </div><!--grid_table-->

    </div><!--content_middle-->

    <div class="content_bottom">
      <%= link_to (content_tag(:span, "NEW Item")),
        new_item_path,
        :class => 'btn_large' %>
    </div><!--content_bottom-->


  <% end %>
</div><!--items-->

