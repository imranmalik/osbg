<div class="items">
  <div class="content_top">
    <div class="primary_heading">
      <h1>
        Items<span>&nbsp;/&nbsp;Active</span>
      </h1>
    </div>
    <div class="primary_btn">
      <%= link_to (content_tag(:span, "NEW Item")),
                  new_item_path,
                  :class => 'btn_large' %>
    </div>
  </div>
  <!--content_top-->
  <%= form_tag "items/bulk_actions", :remote => true do -%>
      <div class="content_middle">
        <div class="grid_control">
          <div class="grid_control_left">
            <ul value='item'>
              <li><%= submit_tag "Recover", :name => "recover_archived", :class => "top_links recover_archived", :style => "display:none;" %></li>
              <li><%= submit_tag "Recover", :name => "recover_deleted", :class => "top_links recover_deleted", :style => "display:none;" %></li>
              <li><%= submit_tag "Archive", :name => "archive", :class => "top_links archive" %></li>
              <li class="grid_control_sep"><%= submit_tag "Delete", :name => "destroy", :class => "top_links destroy" %></li>
              <li><a href="#" class="no_links">Copy</a></li>
              <li><a href="#" class="no_links">Print</a></li>
            </ul>
          </div>
          <div class="grid_control_right" id="active_links">
            <%= render 'items/filter_links' %>
          </div>
        </div>
        <!--grid_control-->
        <div class="grid_table">
          <table cellpadding="0" cellspacing="0" class="table table_listing item_listing">
            <colgroup>
              <col class="one"/>
              <col class="two"/>
              <col class="three"/>
              <col class="four"/>
              <col class="five"/>
              <col class="six"/>
              <col class="seven"/>
              <col class="eight"/>
            </colgroup>
            <thead>
            <tr>
              <th class="align_center not-sortable"><%= check_box_tag 'select_all' %></th>
              <th class="align_left">Item name</th>
              <th class="align_left">Item description</th>
              <th class="align_right sorting {sorter:'thousands'}">Unit cost</th>
              <th class="align_right sorting">Quantity</th>
              <th class="align_center">Tax 1</th>
              <th class="align_center">Tax 2</th>
              <th class="align_center not-sortable"><%= t '.actions', :default => t("helpers.actions") %></th>
            </tr>
            </thead>
            <tbody id="item_body">
            <%= render 'items' %>
            <tfoot id="paging_links">
            <%= render "paging" %>
            </tfoot>
            </tbody>
          </table>
        </div>
        <!--grid_table-->
      </div>
      <!--content_middle-->
      <div class="content_bottom">
        <%= link_to (content_tag(:span, "NEW Item")),
                    new_item_path,
                    :class => 'btn_large' %>
      </div>
      <!--content_bottom-->
  <% end %>
</div><!--items-->

