    <%= f.label :unit_cost, :class => "form_title" %>
    <%= f.text_field :unit_cost, :class => "form_title small" %>


    <%= f.label :quantity, :class => "form_title small" %>
    <%= f.number_field :quantity, :class => "small" %>
  </div>
  <div class="field">
    <label class="form_title">Taxes</label>
    <%= f.collection_select(:tax_1,Tax.all,:id,:name,{:prompt => ""},{"data-placeholder" => "Select an industry...",:class => "tax1 small chzn-select"}) %>

