<%= form_tag "/payment_terms/create", :id => "create_term", :remote => true do %>
    <div id="termsModal" class="modal hide fad" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="model_grey_container">
        <div class="modal-header">
          <h1>Add New payment term</h1> <br/><br/>
          <table cellspacing="0" cellpadding="0">
            <tbody>
            <tr>
              <td colspan="4" class="form_field">
                <%= text_field_tag "payment_term[number_of_days]", '', :class => 'text_field', :placeholder => "Number of days" %>
              </td>
            </tr>
            <tr>
              <td colspan="2" class="form_field">
                <%= text_field_tag "payment_term[description]", '', :class => 'text_field', :placeholder => "Description" %>
                <%= hidden_field_tag :quick_create %>
              </td>
            </tr>
            </tbody>
          </table>
          <div class="cross_btn">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
              <%= image_tag "cross.png", :size => "7x7", :alt => "" %>
            </button>
          </div>
        </div>
        <div class="modal-body">
        </div>
        <div class="footer ">
          <%= submit_tag "Add payment term", :class => "btn_large" %>
          <a class="btn_large dark_grey" href="#" data-dismiss="modal">cancel</a>
        </div>
      </div>
    </div>
<% end %>