<%= form_tag "/payment_terms/create", :id => "create_term", :remote => true do %>
    <%= link_to 'x', 'javascript:', :class => "close_btn" %>
    <h4>New payment term</h4> <br/>
    <table cellspacing="0" cellpadding="0">
      <tbody>
      <tr>
        <td colspan="4" class="form_field">
          <%= text_field_tag "payment_term[number_of_days]", '', :class => 'text_field', :placeholder => "Number of days *" %>
        </td>
      </tr>
      <tr>
        <td colspan="2" class="form_field">
          <%= text_field_tag "payment_term[description]", '', :class => 'text_field', :placeholder => "Description *" %>
          <%= hidden_field_tag :quick_create %>
        </td>
      </tr>
      </tbody>
    </table>
    <div class="cross_btn">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
        <%= image_tag "cross.png", :size => "7x7", :alt => "" %>
      </button>
    </div>
    <div class="footer ">
      <%= submit_tag "save",:name => "save", :class => "btn_large", :style => "width:40px;" %>
      <%= submit_tag "save & ADD MORE",:name => "add_more", :class => "btn_large" %>
    </div>
<% end %>